{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,

    /* Added for global Express typings */
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },

  /* Added so TypeScript loads all source + type files */
  "include": ["src"]
}
